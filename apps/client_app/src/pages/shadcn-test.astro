---
import Layout from '@/components/Layout.astro';
import { Button } from '@/components/ui/button';
---

<Layout title="Shadcn Test">
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Shadcn Button Test</h1>
    <div class="space-x-2">
      <Button client:load>Default Button</Button>
      <Button client:load variant="destructive">Destructive</Button>
      <Button client:load variant="outline">Outline</Button>
      <Button client:load variant="secondary">Secondary</Button>
      <Button client:load variant="ghost">Ghost</Button>
      <Button client:load variant="link">Link</Button>
    </div>
  </div>
</Layout>
